<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <!-- 中部 ViewPager实现 -->
    <android.support.v4.view.ViewPager
        android:id="@+id/id_pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        />

    <!-- 底部导航栏 RadioButton 实现 -->
    <RadioGroup
        android:id="@+id/id_rg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#e8ebee"
        android:orientation="horizontal"
        android:paddingBottom="2dp"
        android:paddingTop="3dp"
        android:weightSum="4"
        >

        <RadioButton
            android:checked="true"
            android:id="@+id/tab_home"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/tab_home_selector"
            android:gravity="center"
            android:text="首页"
            android:textColor="@color/tab_text_selector"
            android:textSize="12sp"
            />

        <RadioButton
            android:id="@+id/tab_channel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/tab_channel_selector"
            android:gravity="center"
            android:text="发现"
            android:textColor="@color/tab_text_selector"
            android:textSize="12sp"
            />

        <RadioButton
            android:id="@+id/tab_subject"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/tab_subject_selector"
            android:gravity="center"
            android:text="新闻"
            android:textColor="@color/tab_text_selector"
            android:textSize="12sp"
            />

        <RadioButton
            android:id="@+id/tab_user"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/tab_user_selector"
            android:gravity="center"
            android:text="我"
            android:textColor="@color/tab_text_selector"
            android:textSize="12sp"
            />
    </RadioGroup>

</LinearLayout>
